<main id="main ">
    <div class="container">
        <br /><br /><br /><br /><br />
        <div class="row mt-2 justify-content-center">
            <div class="col-12 col-lg-5 text-center">
                @using (Html.BeginForm("Delete", "AdminList", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                <table class="table-view">
                    <tr>
                        <td colspan="3" align="center"><h3>@Html.DisplayFor(model => model.FullName)'s Information</h3></td>
                    </tr>&nbsp;
                    <tr>
                        <td rowspan="4">
                            <img src="~/Contents/Upload_Files/Admins/@Html.DisplayFor(model => model.ProfilePic)" alt="~/Contents/Upload_Files/Admins/default.jpg" height="200" width="200" />
                        </td>
                        <td width="30%">User Name</td>
                        <td width="40%">@Html.DisplayFor(model => model.UserName)</td>
                    </tr>&nbsp;
                    <tr>
                        <td width="30%">Email</td>
                        <td width="40%">@Html.DisplayFor(model => model.Email)</td>
                    </tr>&nbsp;
                    <tr>
                        <td width="30%">Phone</td>
                        <td width="40%">@Html.DisplayFor(model => model.Phone)</td>
                    </tr>&nbsp;
                    <tr>
                        <td width="30%">Address</td>
                        <td width="40%">@Html.DisplayFor(model => model.Address)</td>
                    </tr>&nbsp;
                    <tr>
                        <td colspan="3" align="center">
                            <input type="submit" value="Delete" class="btn btn-warning" />
                        </td>
                    </tr>
                </table>
                }
            </div>
        </div>
    </div>
</main>

