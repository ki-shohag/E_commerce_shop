 <main id="main ">
        <div class="container">
            <br /><br /><br /><br /><br />
            <div class="row mt-2 justify-content-center">
                <div class="col-12 col-lg-8 text-center">
                    <div id="category">
                    </div>
                    <br /><br />
                    <div id="productName"></div>
                    <script>
                        $(document).ready(function () {
                            $.getJSON("/Profits/GetDataCategory", function (data) {
                                var Names = []
                                var Qts = []
                                for (var i = 0; i < data.length; i++) {
                                    Names.push(data[i].name);
                                    Qts.push(data[i].count);
                                }

                                Highcharts.chart('category', {
                                    chart: {
                                        type: 'column'
                                    },
                                    title: {
                                        text: 'Alltime Catagorywise Profit'
                                    },
                                    subtitle: {
                                        text: ''
                                    },
                                    xAxis: {
                                        categories: Names
                                    },
                                    yAxis: {
                                        title: {
                                            text: 'Quantity'
                                        }
                                    },
                                    plotOptions: {
                                        line: {
                                            dataLabels: {
                                                enabled: true
                                            },
                                            enableMouseTracking: false
                                        }
                                    },
                                    series: [{
                                        name: 'Total',
                                        colorByPoint: true,
                                        data: Qts
                                    }]
                                });
                            });
                        });


                        $(document).ready(function () {
                            $.getJSON("/Profits/GetDataProductName", function (data) {
                                var Names = []
                                var Qts = []
                                for (var i = 0; i < data.length; i++) {
                                    Names.push(data[i].name);
                                    Qts.push(data[i].count);
                                }

                                Highcharts.chart('productName', {
                                    chart: {
                                        type: 'bar'
                                    },
                                    title: {
                                        text: 'Alltime Productwise profit'
                                    },
                                    subtitle: {
                                        text: ''
                                    },
                                    xAxis: {
                                        categories: Names
                                    },
                                    yAxis: {
                                        title: {
                                            text: 'Quantity'
                                        }
                                    },
                                    plotOptions: {
                                        line: {
