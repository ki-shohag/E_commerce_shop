    <script type="text/javascript">
        $(document).ready(function () {
            var purchaseData = Array();
            purchaseData.push(["ID", "Product Name", "Tax", "Category", "Price"]);
            $.ajax({
                type: 'GET',
                dataType: "json",
                contentType: "application/json",
                url: '/SellProduct/GetPurchasedProductsData',
                success: function (result) {
                    result = JSON.parse(result);
                    //console.log(result);
                    for (var i = 0; i < result.length; i++) {
                        purchaseData.push([result[i].ProductName, result[i].ID, result[i].Tax, result[i].Category, result[i].Price]);
                    }
                    //console.log(purchaseData);
                }
            });
            google.charts.load('current', { 'packages': ['corechart'] });
            google.charts.setOnLoadCallback(drawSeriesChart);

            function drawSeriesChart() {

                var data = google.visualization.arrayToDataTable(purchaseData);

                var options = {
                    title: 'Purchased Product Details',
                    hAxis: { title: 'Products' },
                    vAxis: { title: 'Tax Rate (%)' },
                    bubble: { textStyle: { fontSize: 11 } }
                };

                var chart = new google.visualization.BubbleChart(document.getElementById('series_chart_div'));
                chart.draw(data, options);
            }
        });
    </script>
