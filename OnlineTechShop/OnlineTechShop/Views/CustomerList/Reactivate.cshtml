        </div>
    </div>
</header>
<main id="main ">
    <div class="container">
        <br /><br /><br /><br /><br />
        <div class="row mt-2 justify-content-center">
            <div class="col-12 col-lg-8 text-center">
                @using (Html.BeginForm("ReactivateCustomer", "CustomerList", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <table class="table-view">
                        <tr>
                            <td colspan="3" align="center"><h3>@Html.DisplayFor(model => model.FullName)'s Information</h3></td>
                        </tr>&nbsp;
                        <tr>
                            <td rowspan="7">
                                <img src="~/Contents/Upload_Files/Admins/@Html.DisplayFor(model => model.ProfilePic)" alt="" height="300" width="300" />
                            </td>
                            <td width="30%"><label class="col-form-label-sm">User Name</label></td>
                            <td width="40%"><label class="col-form-label-sm">@Html.DisplayFor(model => model.UserName)</label></td>
                        </tr>&nbsp;
                        <tr>
                            <td width="30%"><label class="col-form-label-sm">Email</label></td>
                            <td width="40%"><label class="col-form-label-sm">@Html.DisplayFor(model => model.Email)</label></td>
                        <tr>
                            <td width="30%"><label class="col-form-label-sm">Phone</label></td>
                            <td width="40%"><label class="col-form-label-sm">@Html.DisplayFor(model => model.Phone)</label></td>
                        </tr>&nbsp;
                        <tr>
                            <td width="30%"><label class="col-form-label-sm">Address</label></td>
                            <td width="40%"><label class="col-form-label-sm">@Html.DisplayFor(model => model.Address)</label></td>
                        </tr>&nbsp;
                        <tr>
                            <td width="30%"><label class="col-form-label-sm">Joined</label></td>
                            <td width="40%"><label class="col-form-label-sm">@Html.DisplayFor(model => model.JoiningDate)</label></td>
                        </tr>&nbsp;
                        <tr>
                            <td width="30%"><label class="col-form-label-sm">Last Updated</label></td>
                            <td width="40%"><label class="col-form-label-sm">@Html.DisplayFor(model => model.LastUpdated)</label></td>
                        </tr>&nbsp;
                        <tr>
                            <td colspan="3" align="center">
                                <input type="hidden" name="id" value="@Html.DisplayFor(model=>model.Id)" />
                                <input type="submit" value="Reactivate" class="btn btn-warning" />
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</main>
