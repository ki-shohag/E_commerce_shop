                            </tr>
                            <tr>
                                <th class="w-25">Billing Address : </th>
                                <td><input class="form-control" type="text" value="@Model.BillingAddress" name="BillingAddress" /></td>
                            </tr>
                            <tr>
                                <th class="w-25">Shipping Address : </th>
                                <td><input class="form-control" type="text" value="@Model.ShippingAddress" name="ShippingAddress" /></td>
                            </tr>
                            <tr>
                                <th class="w-25">Shipping Method : </th>
                                <td>
                                    <select name="ShippingMethod" class="form-control" id="ShippingMethod">
                                        @if (Model.ShippingMethod == "Card Payment")
                                        {
                                            <option value="Card Payment" selected>Card Payment</option>
                                            <option value="Cash on Delivery">Cash on Delivery</option>
                                        }
                                        else
                                        {
                                            <option value="Card Payment">Card Payment</option>
                                            <option value="Cash on Delivery" selected>Cash on Delivery</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr class="cardPaymentDivs">
                                <th>Card Type : </th>
                                <td>
                                    <select name="CardType" class="form-control">
                                        @if (Model.CardType == "VISA")
                                        {
                                            <option value="VISA" selected>VISA</option>
                                            <option value="MasterCard">MasterCard</option>
                                            <option value="Amex">Amex</option>
                                        }
                                        else if (Model.CardType == "MasterCard")
                                        {
                                            <option value="VISA">VISA</option>
                                            <option value="MasterCard" selected>MasterCard</option>
                                            <option value="MasterCard">MasterCard</option>
                                        }
                                        else
                                        {
                                            <option value="VISA">VISA</option>
                                            <option value="MasterCard">MasterCard</option>
                                            <option value="MasterCard" selected>MasterCard</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr class="cardPaymentDivs">
                                <th>Card Number: </th>
                                <td><input type="text" value="@Model.CardNumber" class="form-control" /></td>
                            </tr>
                            <tr class="cardPaymentDivs">
                                <th>Expiration Month : </th>
                                <td><input type="number" value="@Model.ExpirationMonth" class="form-control" /></td>
                            </tr>
                            <tr class="cardPaymentDivs">
                                <th>Expiratin Year : </th>
                                <td><input type="number" value="@Model.ExpirationYear" class="form-control" /></td>
                            </tr>
                            <tr>
                                <th>Promo Code : </th>
                                <td><input type="text" class="form-control" /></td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <button type="submit" class="form-control btn btn-success">Confirm Order</button>
                                </td>
                            </tr>
                        </table>
                    </form>
