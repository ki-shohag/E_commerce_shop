                    <span class="text-danger">@TempData["msg"]</span>
                    <h3>Order Overview</h3>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Product Id</th>
                            <th>Product Name</th>
                            <th>Brand</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th>Discount</th>
                            <th>Tax</th>
                            <th>Total Price</th>
                        </tr>    
                        @{ 
                            var totalDiscount = 0;
                            var totalTax = 0;
                            decimal subtotal = 0;

                            foreach (var item in ViewBag.Cart)
                            {
                                totalDiscount = @item.Discount + totalDiscount;
                                totalTax = @item.Tax + totalTax;
                                subtotal = (@item.TotalPrice * @item.Quantity) + subtotal;

                            <tr>
                                <td>P-@item.ProductId</td>
                                <td>@item.ProductName</td>
                                <td>@item.Brand</td>
                                <td>@item.UnitPrice BDT</td>
                                <td>
                                    @item.Quantity Pcs
                                </td>
                                <td>@item.Discount%</td>
                                <td>@item.Tax%</td>
                                <td>@(item.TotalPrice * item.Quantity) BDT</td>
                            </tr>
                            }
                        <tr class="text-left">
                            <td colspan="1"><b>Total Tax:</b> </td>
                            <td colspan="8">@(subtotal * totalTax / 100) BDT (@totalTax%)</td>
                        </tr>
                        <tr class="text-left">
                            <td colspan="1"><b>Total Discount:</b> </td>
                            <td colspan="8">@(subtotal * totalDiscount / 100) BDT (@totalDiscount%)</td>
                        </tr>
                        <tr class="text-left">
                            <td colspan="1"><b>Sub Total:</b> </td>
                            <td colspan="8">@subtotal BDT</td>
                        </tr>
                            }
                    </table>
                </div>
                <div class="col-12 col-lg-5">
                    <h3>Payment and Shipping Details</h3>
                    <form method="post" action="">
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th class="w-25">Customer Name : </th>
                                <td><input class="form-control" type="text" value="@Model.CustomerFullName" name="CustomerFullName" /></td>
                            </tr>
                            <tr>
                                <th class="w-25">Phone Number : </th>
