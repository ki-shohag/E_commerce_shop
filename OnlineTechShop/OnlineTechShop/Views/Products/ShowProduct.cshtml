    <script>
        $(document).ready(function () {
            $(function () {

                $("#rateYo").rateYo({
                    rating: 0
                });

                $("#rateYo").rateYo()
                    .on("rateyo.set", function (e, data) {
                        var UserId = $("#UserId").data("value");
                        var ProductId = @(Model.Id);
                        var rate = data.rating;
                        //alert("The rating is set to " + data.rating + "!");
                        var myData = JSON.stringify({ 'rating1': data.rating, 'UserId': UserId, "ProductId": ProductId });
                        $.ajax({
                            type: "POST",
                            url: "/Products/PostRating",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            data: myData,
                            success: function (data) {
                                alert("Successfully rated " + rate + "!");
                            }
                        }); 
                    });

            });
        });
