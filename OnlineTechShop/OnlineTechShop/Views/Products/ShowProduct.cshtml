    <script>
        $(document).ready(function () {
            $(function () {

                $("#rateYo").rateYo({
                    rating: 0
                });

                $("#rateYo").rateYo()
                    .on("rateyo.set", function (e, data) {
                        var UserId = $("#UserId").data("value");
                        var ProductId = @(Model.Id);
                        var rate = data.rating;
                        //alert("The rating is set to " + data.rating + "!");
                        var myData = JSON.stringify({ 'rating1': data.rating, 'UserId': UserId, "ProductId": ProductId });
                        $.ajax({
                            type: "POST",
                            url: "/Products/PostRating",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            data: myData,
                            success: function (data) {
                                alert("Successfully rated " + rate + "!");
                            }
                        });
                    });

            });
        });
    </script>
    <script>
        //ShoppingCart
        $(document).ready(function () {
            $("#addToCartBtn").click(function () {
                mydata = JSON.stringify({ "ProductId": this.value, "Quantity": 1 });
                //alert(mydata);
                $.ajax({
                    type: "POST",
                    url: "/Cart/AddProductToCart",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: mydata,
                    success: function (result) {
                        //alert(JSON.parse(result).msg);
                        var totalCartQuantity = JSON.parse(result).totalCartQuantity;
                        if (JSON.parse(result).msg == "Added prodcut!") {
                            $('.alert').show();
                            $("#alertMsg").text("Added product to the cart!");
                        }
                        $("#cartQuantity").text(totalCartQuantity);
                    }
                });
            });
        });
